<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
  <meta charset="UTF-8" />
  <title>Topic Helper ‚Äì MD Technical School</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>

  <style>
    :root{
      --primary: #1e90ff;
      --accent:  #ff8a00;
      --bg:      #f5f7fb;
      --surface: #ffffff;
      --border:  #e5e7eb;
      --muted:   #6b7280;
      --radius:  14px;
      --shadow:  0 10px 30px rgba(0,0,0,.06);
      --focus:   rgba(30,144,255,.35);
    }
    body{ background: var(--bg); font-family: "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif; color:#111827; }

    /* Page head */
    .page-head{
      background: linear-gradient(180deg, rgba(30,144,255,.10), rgba(255,138,0,.06));
      border-bottom: 1px solid var(--border);
      padding: 1.1rem 0 .9rem;
      margin-bottom: 1rem;
    }
    .page-head h1{
      font-size: clamp(1.25rem, 2.6vw, 1.75rem);
      font-weight: 800; margin: 0;
    }
    .page-head .sub{ color: var(--muted); }

    /* Card-ish shells */
    .cardish{
      background: var(--surface);
      border: 1px solid var(--border);
      border-radius: var(--radius);
      box-shadow: var(--shadow);
    }
    .form-control:focus, .btn:focus{
      box-shadow: 0 0 0 .25rem var(--focus) !important;
      outline: none !important;
    }
    .hint{ color: var(--muted); font-size: .925rem; }

    /* Summary block */
    .summary{
      background: #fff;
      border: 1px solid var(--border);
      border-radius: 12px;
      box-shadow: 0 6px 20px rgba(0,0,0,.04);
      padding: 1rem 1rem;
    }
    .summary-header{
      display:flex; align-items:center; justify-content:space-between; gap:.75rem; flex-wrap:wrap;
      border-bottom:1px solid var(--border); padding-bottom:.5rem; margin-bottom:.75rem;
    }
    .summary-title{ font-weight:800; margin:0; }
    .summary-actions .btn{ min-width: 110px; }

    .stat-pill{
      display:inline-block; border:1px solid var(--border); background:#fff; border-radius:999px;
      padding:.35rem .75rem; font-weight:600; color:#0f172a; box-shadow: 0 6px 18px rgba(0,0,0,.05);
    }

    @media (prefers-reduced-motion: reduce){
      *{ transition:none !important; animation:none !important; }
    }
  </style>
</head>
<body>
  <%- include('header', { user: user }) %>

  <!-- Page Head -->
  <div class="page-head">
    <div class="container d-flex flex-wrap justify-content-between align-items-end gap-2">
      <div>
        <h1>Topic Helper</h1>
        <div class="sub">Paste a topic or paragraph, and get a clear, student-friendly explanation with key points.</div>
      </div>
      <div>
        <span class="stat-pill">Clarity first. Confidence follows. üí°</span>
      </div>
    </div>
  </div>

  <div class="container pb-5">
    <!-- Input form -->
    <form method="post" class="cardish p-3 p-md-4 mb-4">
      <div class="mb-3">
        <label for="topic" class="form-label fw-semibold">What would you like explained?</label>
        <textarea id="topic" name="topic" class="form-control" rows="7" required
                  placeholder="Ex: Explain the OSI model for networking, focusing on Layers 3‚Äì4 and common protocols."><%= topic || '' %></textarea>
        <div class="d-flex justify-content-between mt-2">
          <div class="hint">Tip: Be specific. Add goals like ‚Äúmake it simple‚Äù or ‚Äúinclude a real-world example.‚Äù</div>
          <div class="hint"><span id="charCount">0</span> characters</div>
        </div>
      </div>
      <div class="d-flex gap-2">
        <button class="btn btn-primary" type="submit">Generate Summary</button>
        <button class="btn btn-outline-secondary" type="button" id="clearBtn">Clear</button>
      </div>
    </form>

    <!-- Output -->
    <% if (result) { %>
      <section aria-label="AI Summary" class="summary">
        <div class="summary-header">
          <h5 class="summary-title">AI Summary</h5>
          <div class="summary-actions d-flex gap-2">
            <button class="btn btn-outline-primary btn-sm" id="copyBtn" type="button">Copy</button>
            <button class="btn btn-outline-secondary btn-sm" id="downloadBtn" type="button">Download .txt</button>
          </div>
        </div>

        <!-- Render the result safely as plain text -->
        <div class="text-body" id="summaryText"><%= result %></div>
      </section>
    <% } %>
  </div>

  <script>
    (function(){
      // Character counter
      const ta = document.getElementById('topic');
      const out = document.getElementById('charCount');
      const clearBtn = document.getElementById('clearBtn');
      const copyBtn = document.getElementById('copyBtn');
      const downloadBtn = document.getElementById('downloadBtn');
      const summaryEl = document.getElementById('summaryText');

      const updateCount = () => { if(out && ta) out.textContent = (ta.value || '').length; };
      ta && ta.addEventListener('input', updateCount);
      updateCount();

      // Clear textarea
      clearBtn && clearBtn.addEventListener('click', () => {
        if (!ta) return;
        ta.value = '';
        updateCount();
        ta.focus();
      });

      // Copy result
      copyBtn && copyBtn.addEventListener('click', async () => {
        if (!summaryEl) return;
        try{
          await navigator.clipboard.writeText(summaryEl.textContent || '');
          copyBtn.textContent = 'Copied!';
          setTimeout(() => copyBtn.textContent = 'Copy', 1200);
        }catch(e){
          alert('Copy failed. Please select and copy manually.');
        }
      });

      // Download result as .txt
      downloadBtn && downloadBtn.addEventListener('click', () => {
        if (!summaryEl) return;
        const blob = new Blob([summaryEl.textContent || ''], { type: 'text/plain;charset=utf-8' });
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = 'topic-summary.txt';
        document.body.appendChild(a);
        a.click();
        a.remove();
        URL.revokeObjectURL(url);
      });
    })();
  </script>
</body>
</html>
