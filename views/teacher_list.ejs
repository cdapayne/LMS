<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Teacher List â€“ School LMS</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('header', { user: { role: 'admin' } }) %>
  <div class="container py-4">
    <h2>All Teachers</h2>
    <% if (teachers.length === 0) { %>
      <div class="alert alert-info">No teachers found.</div>
    <% } else { %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Username</th>
            <th>Email</th>
            <th>Status</th>
            <th style="width: 160px;">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% teachers.forEach(t => { %>
            <tr>
              <td><%= t.id %></td>
              <td><%= t.name %></td>
              <td>@<%= t.username %></td>
              <td><%= t.email %></td>
              <td><span class="badge bg-<%= t.status === 'approved' ? 'success' : 'secondary' %>"><%= t.status %></span></td>
              <td class="d-flex gap-2">
                <a class="btn btn-sm btn-outline-primary" href="/admin/teachers/<%= t.id %>/edit">Edit</a>
                <form method="post" action="/admin/teachers/<%= t.id %>/delete" onsubmit="return confirm('Delete this teacher?')">
                  <button class="btn btn-sm btn-outline-danger">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
    <a href="/admin/teachers/new" class="btn btn-success">Create Teacher</a>
    <a href="/admin" class="btn btn-outline-secondary">Back to Dashboard</a>
  </div>
</body>
</html>
