<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= test.title %> â€“ <%= klass.name %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('header', { user: { role: 'student' } }) %>
  <div class="container py-4">
    <h2><%= test.title %></h2>
    <p>Class: <%= klass.name %></p>
    <div class="mb-2">Current Grade: <span id="grade">0%</span></div>
    <div id="timer" class="mb-3">Time Left: <span id="time"></span></div>
    <div id="question-block">
      <div id="question-number" class="mb-2"></div>
      <img id="question-image" src="" alt="Question Image" class="img-fluid mb-2" style="display:none;">
      <p id="question-text" class="lead"></p>
      <form id="question-form">
        <div id="answers-container" class="list-group"></div>
      </form>
    </div>
    <form id="final-form" method="post" action="/student/classes/<%= klass.id %>/tests/<%= test.id %>"></form>
  </div>
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    window.testQuestions = <%- JSON.stringify(test.questions) %>;
    window.timePerQuestion = <%= test.timeLimit || 90 %>;
    window.attempts = <%= attempts %>;
    window.testId = <%= test.id %>;
  </script>
  <script src="/js/taketest.js"></script>
</body>
</html>