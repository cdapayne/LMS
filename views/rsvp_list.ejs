<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Event RSVPs â€“ MD Technical School</title>
  <link rel="icon" href="<%= branding.favicon %>">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('header', { user: user }) %>
  <div class="container pb-4">
    <h2 class="my-4">Event RSVPs</h2>
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>ZIP</th>
            <th>Branch</th>
            <th>Event</th>
            <th>Program</th>
            <th>Submitted</th>
          </tr>
        </thead>
        <tbody>
          <% rsvps.forEach(r => { %>
            <tr>
              <td><%= r.fullName %></td>
              <td><%= r.email %></td>
              <td><%= r.phone %></td>
              <td><%= r.address %></td>
              <td><%= r.city %></td>
              <td><%= r.state %></td>
              <td><%= r.zip %></td>
              <td><%= r.branch %></td>
              <td><%= r.event %></td>
              <td><%= r.program %></td>
              <td><%= r.createdAt ? new Date(r.createdAt).toLocaleString() : '' %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>