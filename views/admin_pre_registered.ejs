<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Pre-Registered Users â€“ MD Technical School</title>
  <link rel="icon" href="<%= branding.favicon %>">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <%- include('header', { user: user }) %>
  <div class="container mt-4">
    <h2>Pre-Registered Users</h2>
    <table class="table table-striped mt-3">
      <thead>
        <tr>
          <th>Name</th>
          <th>Phone</th>
          <th>Email</th>
          <th>Serving</th>
          <th>Branch</th>
          <th>State</th>
          <th>Zip</th>
          <th>Course</th>
          <th>Applicant Type</th>
          <th>Referral</th>
          <th>Referral Email</th>
          <th>Created</th>
        </tr>
      </thead>
      <tbody>
        <% preregs.forEach(p => { %>
          <tr>
            <td><%= p.name %></td>
            <td><%= p.phone %></td>
            <td><%= p.email || '' %></td>
            <td><%= p.serving ? 'Yes' : 'No' %></td>
            <td><%= p.branch || '' %></td>
            <td><%= p.state %></td>
            <td><%= p.zip %></td>
            <td><%= p.course %></td>
            <td><%= p.applicantType %></td>
            <td><%= p.referral || '' %></td>
            <td><%= p.referralEmail || '' %></td>
            <td><%= new Date(p.createdAt).toLocaleString() %></td>
          </tr>
        <% }) %>
        <% if (preregs.length === 0) { %>
          <tr><td colspan="12" class="text-center">No pre-registrations yet.</td></tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>