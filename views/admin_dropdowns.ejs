<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Dropdown Options â€“ Admin | MD Technical School</title>
  <link rel="icon" href="<%= branding?.favicon %>">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('header', { user: user }) %>
  <div class="container mt-4">
    <h2>Dropdown Options</h2>
    <% if (saved) { %>
      <div class="alert alert-success">Changes saved.</div>
    <% } %>
    <div class="row">
      <div class="col-md-6 mb-4">
        <h5>Courses</h5>
        <ul class="list-group mb-3">
          <% (dropdowns.courses || []).forEach(function(c){ %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span><%= c %></span>
              <form method="post" action="/admin/dropdowns/delete" class="m-0">
                <input type="hidden" name="type" value="courses">
                <input type="hidden" name="value" value="<%= c %>">
                <button class="btn btn-sm btn-outline-danger">Remove</button>
              </form>
            </li>
          <% }); %>
        </ul>
        <form method="post" action="/admin/dropdowns/add" class="input-group">
          <input type="hidden" name="type" value="courses">
          <input type="text" name="value" class="form-control" placeholder="New course" required>
          <button class="btn btn-primary" type="submit">Add</button>
        </form>
      </div>
      <div class="col-md-6 mb-4">
        <h5>Affiliate Programs</h5>
        <ul class="list-group mb-3">
          <% (dropdowns.affiliatePrograms || []).forEach(function(a){ %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span><%= a %></span>
              <form method="post" action="/admin/dropdowns/delete" class="m-0">
                <input type="hidden" name="type" value="affiliatePrograms">
                <input type="hidden" name="value" value="<%= a %>">
                <button class="btn btn-sm btn-outline-danger">Remove</button>
              </form>
            </li>
          <% }); %>
        </ul>
        <form method="post" action="/admin/dropdowns/add" class="input-group">
          <input type="hidden" name="type" value="affiliatePrograms">
          <input type="text" name="value" class="form-control" placeholder="New affiliation" required>
          <button class="btn btn-primary" type="submit">Add</button>
        </form>
      </div>
    </div>
  </div>
</body>
</html>