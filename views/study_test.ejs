<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Study Test</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <%- include('header', { user: { role: 'student' } }) %>
  <div class="container py-4">
    <h2>Study Test Generator</h2>
    <form method="post" action="/student/study" class="mb-4">
      <div class="mb-3">
        <label for="lecture" class="form-label">Material to Study</label>
        <textarea id="lecture" name="lecture" class="form-control" rows="6" required></textarea>
      </div>
      <div class="mb-3">
        <label for="questionCount" class="form-label">Number of Questions</label>
        <input type="number" id="questionCount" name="questionCount" class="form-control" min="1" value="5" />
      </div>
      <div class="mb-3">
        <label for="optionCount" class="form-label">Options per Question</label>
        <input type="number" id="optionCount" name="optionCount" class="form-control" min="2" value="4" />
      </div>
      <button class="btn btn-primary">Generate Questions</button>
    </form>
    <% if (typeof questions !== 'undefined') { %>
        <% questions.forEach((q, i) => { %>
          <div class="mb-3">
            <% if (q.picture) { %>
              <img src="<%= q.picture %>" alt="Question Image" class="img-fluid d-block mb-2">
            <% } %>
            <strong>Q<%= i + 1 %>:</strong> <%= q.question %>
            <ul>
              <% q.options.forEach((opt, j) => { %>
                <li <%= q.answer === j ? 'class="text-success"' : '' %>><%= opt %></li>
              <% }) %>
            </ul>
            <div class="mb-2"><em>Answer: <%= q.options[q.answer] %></em></div>
            <div class="small text-muted"><%= q.explanation %></div>
          </div>
        <% }) %>
      <% } %>
  </div>
</body>
</html>