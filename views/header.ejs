<link rel="stylesheet" href="/css/theme.css">
<style>
  :root{
    --primary-color: <%= branding.primaryColor %>;
    --secondary-color: <%= branding.secondaryColor %>;
  }
</style>
<script src="/js/theme.js"></script>
<header class="text-white p-3 mb-3 bg-primary">
  <div class="container d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center gap-2">
      <img src="<%= branding.primaryLogo %>" alt="Logo" style="height:40px;">
      <h1 class="h4 m-0">MD Technical School</h1>
    </div>
    <div class="d-flex align-items-center gap-3">
      <% if (typeof user !== 'undefined' && user) { %>
      <nav class="d-flex gap-3">
        <a class="nav-link-custom" href="/dashboard">Home</a>
        <% if (user.role === 'admin') { %>
          <a class="nav-link-custom" href="/admin/approvals">Approvals</a>
          <a class="nav-link-custom" href="/admin/reports">Reports</a>
                <a class="nav-link-custom" href="/admin/email-templates">Email Templates</a>
                            <a class="nav-link-custom" href="/admin/dropdowns">Dropdowns</a>
              <a class="nav-link-custom" href="/admin/branding">Branding</a>
        <% } %>
        <% if (user.role === 'teacher') { %>
          <a class="nav-link-custom" href="/teacher/reports">Reports</a>
        
        <% } %>
        <% if (user.role === 'student') { %>
          <a class="nav-link-custom" href="/student">My Classes</a>
        <% } %> 
         <a class="nav-link-custom" href="/account">Account</a>
        <a class="nav-link-custom" href="/logout">Logout</a>
      </nav>
      <% } %>
      <button id="themeToggle" class="btn btn-sm btn-outline-light" aria-label="Toggle theme"></button>
    </div>
  </div>
</header>
<script>
  setupThemeToggle('themeToggle');
</script>
<style>
  .nav-link-custom {
    color: #fff !important;
    font-weight: 500;
    transition: color 0.2s;
  }
  .nav-link-custom:hover {
    color: var(--secondary-color) !important;
    text-decoration: underline;
  }
  h1.h4.m-0 {
    font-family: "Georgia", "Times New Roman", serif;
    font-weight: 700;
    letter-spacing: 1px;
  }
</style>
