<header class="bg-primary text-white p-3 mb-3">
  <div class="container d-flex justify-content-between align-items-center">
    <h1 class="h4 m-0">School LMS</h1>
    <% if (typeof user !== 'undefined' && user) { %>
    <nav class="d-flex gap-3">
      <a class="text-white text-decoration-none" href="/dashboard">Home</a>
      <% if (user.role === 'admin') { %>
        <a class="text-white text-decoration-none" href="/admin/approvals">Approvals</a>
        <a class="text-white text-decoration-none" href="/admin/reports">Reports</a>
      <% } %>
      <% if (user.role === 'teacher') { %>
        <a class="text-white text-decoration-none" href="/teacher/reports">Reports</a>
      <% } %>
      <% if (user.role === 'student') { %>
        <a class="text-white text-decoration-none" href="/student">My Classes</a>
      <% } %>
      <a class="text-white text-decoration-none" href="/logout">Logout</a>
    </nav>
    <% } %>
  </div>
</header>
