<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Forgot Password – School LMS</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    :root { --card-radius: 1rem; }
    body{
      background: var(--bs-body-bg);
      min-height: 100svh;
      display: grid;
      place-items: center;
      padding: 1.25rem;
    }
    .auth-card{
      width: min(440px, 100%);
      background: var(--bs-body-bg);
      border: 1px solid var(--bs-border-color);
      border-radius: var(--card-radius);
      box-shadow: 0 10px 30px rgba(0,0,0,.06);
      overflow: hidden;
    }
    .auth-head{
      padding: 1.25rem 1.25rem .75rem;
      border-bottom: 1px solid var(--bs-border-color);
    }
    .auth-body{ padding: 1.25rem; }
    .brand{
      display:flex; align-items:center; gap:.75rem;
    }
    .brand img{ width:40px; height:40px; object-fit:contain; }
    .brand h1{ font-size: clamp(1.15rem, 3.2vw, 1.35rem); margin:0; }
    .btn .spinner-border{ width:1rem; height:1rem; }
  </style>
</head>
<body>
  <main class="auth-card">
    <header class="auth-head">
      <div class="brand">
        <% if (typeof branding !== 'undefined' && branding?.primaryLogo) { %>
          <img src="<%= branding.primaryLogo %>" alt="Logo" />
        <% } %>
        <h1>Forgot Password</h1>
      </div>
    </header>

    <div class="auth-body">
      <% if (error) { %>
        <div class="alert alert-danger" role="alert"><%= error %></div>
      <% } %>

      <% if (sent) { %>
        <div class="alert alert-success" role="status">
          If the email exists, a reset link has been sent.
        </div>
        <a class="btn btn-primary w-100" href="/login">Back to Login</a>
      <% } else { %>
        <form method="post" action="/forgot-password" class="needs-validation" novalidate>
          <p class="text-body-secondary small mb-3">
            Enter the email associated with your account. If it’s in our system, we’ll email you a reset link.
          </p>

          <div class="mb-3">
            <label class="form-label" for="email">Email</label>
            <input id="email" type="email" name="email" class="form-control"
                   autocomplete="email" inputmode="email" required
                   aria-describedby="emailHelp" />
            <div id="emailHelp" class="form-text">Example: name@school.edu</div>
            <div class="invalid-feedback">Please enter a valid email address.</div>
          </div>

          <!-- Honeypot (basic spam deterrent) -->
          <div class="visually-hidden" aria-hidden="true">
            <label for="website">Website</label>
            <input id="website" name="website" tabindex="-1" autocomplete="off" />
          </div>

          <div class="d-grid gap-2">
            <button id="submitBtn" class="btn btn-primary" type="submit">
              <span class="label">Submit</span>
              <span class="spinner-border spinner-border-sm ms-2 d-none" aria-hidden="true"></span>
            </button>
            <a class="btn btn-link text-decoration-none" href="/login">Back to Login</a>
          </div>
        </form>
      <% } %>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>
  <script>
    // Bootstrap validation + nicer submit UX
    (() => {
      const form = document.querySelector('.needs-validation');
      const btn  = document.getElementById('submitBtn');
      const spin = btn?.querySelector('.spinner-border');

      form?.addEventListener('submit', (e) => {
        // Honeypot check
        const trap = document.getElementById('website');
        if (trap && trap.value) { e.preventDefault(); return; }

        if (!form.checkValidity()) {
          e.preventDefault();
          e.stopPropagation();
          form.classList.add('was-validated');
          return;
        }
        btn?.setAttribute('disabled','disabled');
        spin?.classList.remove('d-none');
      });
    })();
  </script>
</body>
</html>
