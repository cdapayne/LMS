<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Create Teacher â€“ MD Technical School</title>
  <link rel="icon" href="<%= branding?.favicon %>">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    :root{
      --primary-color: dodgerblue;
      --secondary-color: orange;
      --bg: #f4f6f9;
      --surface: #ffffff;
      --border: #e5e7eb;
      --muted: #6b7280;
    }
    body{ background: var(--bg); font-family: "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif; }

    /* Page head */
    .page-head{
      background: linear-gradient(180deg, rgba(30,144,255,.10), rgba(255,165,0,.06));
      border-bottom: 1px solid var(--border);
      padding: 1rem 0; margin-bottom: 1rem;
    }
    .page-head h2{ margin:0; font-weight:800; font-size:1.35rem; }
    .muted{ color: var(--muted); }

    /* Card */
    .cardish{
      background: var(--surface);
      border:1px solid var(--border);
      border-radius:12px;
      box-shadow: 0 .6rem 1.2rem rgba(0,0,0,.05);
      padding:1rem 1rem;
      max-width: 760px;
      margin: 0 auto;
    }

    /* Buttons */
    .btn-primary{ background: var(--primary-color) !important; border-color: var(--primary-color) !important; }
    .btn-primary:hover{ background:#1e6edb !important; border-color:#1e6edb !important; }
    .btn-outline-primary{ color: var(--primary-color) !important; border-color: var(--primary-color) !important; }
    .btn-outline-primary:hover{ background: var(--primary-color) !important; color:#fff !important; }

    .hint{ font-size:.9rem; color: var(--muted); }
    .pw-meter{ height:6px; background:#e9ecef; border-radius:4px; overflow:hidden; }
    .pw-fill{ height:100%; width:0%; transition: width .25s ease; }
    .pw-weak{ background:#f87171; }     /* red */
    .pw-ok{ background:#fbbf24; }       /* amber */
    .pw-strong{ background:#34d399; }   /* green */
  </style>
</head>
<body>
  <%- include('header', { user: { role: 'admin' } }) %>

  <!-- Page Head -->
  <div class="page-head">
    <div class="container">
      <h2>Create New Teacher</h2>
      <div class="muted">Add a faculty account with login credentials and a unique username.</div>
    </div>
  </div>

  <div class="container pb-4">
    <div class="cardish">
      <% if (error) { %><div class="alert alert-danger mb-3"><%= error %></div><% } %>

      <form method="post" action="/admin/teachers" novalidate>
        <div class="mb-3">
          <label class="form-label">Full Name</label>
          <input name="name" class="form-control" placeholder="Jane Doe" required>
          <div class="hint mt-1">Use their legal name as it will appear on reports.</div>
        </div>

        <div class="mb-3">
          <label class="form-label">Username</label>
          <input id="username" name="username" class="form-control" placeholder="jdoe" required>
          <div class="hint mt-1">Lowercase letters and numbers only; no spaces.</div>
        </div>

        <div class="mb-3">
          <label class="form-label">Email</label>
          <input type="email" name="email" class="form-control" placeholder="teacher@example.edu" required>
        </div>

        <div class="mb-2">
          <label class="form-label">Password</label>
          <div class="input-group">
            <input id="password" type="password" name="password" class="form-control" placeholder="At least 8 characters" minlength="8" required>
            <button type="button" class="btn btn-outline-secondary" id="togglePw" aria-label="Show password">Show</button>
          </div>
          <div class="pw-meter mt-2" aria-hidden="true">
            <div id="pwFill" class="pw-fill"></div>
          </div>
          <div id="pwHint" class="hint mt-1">Use at least 8 characters, including a number and a symbol.</div>
        </div>

        <div class="d-flex gap-2 mt-4">
          <button class="btn btn-primary">Create Teacher</button>
          <a href="/admin" class="btn btn-outline-primary">Cancel</a>
        </div>
      </form>
    </div>
  </div>

  <script>
    // Show / hide password
    (function(){
      const pw = document.getElementById('password');
      const btn = document.getElementById('togglePw');
      const fill = document.getElementById('pwFill');
      const hint = document.getElementById('pwHint');
      const uname = document.getElementById('username');

      btn.addEventListener('click', () => {
        const isPw = pw.type === 'password';
        pw.type = isPw ? 'text' : 'password';
        btn.textContent = isPw ? 'Hide' : 'Show';
      });

      function scorePassword(v){
        let score = 0;
        if (!v) return 0;
        // length
        score += Math.min(6, v.length) * 8;
        // variety
        if (/[a-z]/.test(v)) score += 10;
        if (/[A-Z]/.test(v)) score += 10;
        if (/\d/.test(v)) score += 10;
        if (/[^A-Za-z0-9]/.test(v)) score += 12;
        // penalties
        if (/^\w+$/.test(v)) score -= 5; // only word chars
        if (/([a-zA-Z0-9])\1{2,}/.test(v)) score -= 10; // repeats
        return Math.max(0, Math.min(score, 100));
      }

      pw.addEventListener('input', () => {
        const s = scorePassword(pw.value);
        fill.style.width = s + '%';
        fill.className = 'pw-fill ' + (s < 40 ? 'pw-weak' : (s < 70 ? 'pw-ok' : 'pw-strong'));
        hint.textContent = s < 40
          ? 'Weak password. Add length, numbers, and symbols.'
          : (s < 70 ? 'Okay password. Consider adding more variety.' : 'Strong password.');
      });

      // Light username normalization (frontend-only nicety)
      uname.addEventListener('blur', () => {
        uname.value = uname.value.trim().toLowerCase().replace(/\s+/g,'').replace(/[^a-z0-9._-]/g,'');
      });
    })();
  </script>
</body>
</html>
