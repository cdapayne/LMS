<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Mailbox</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container py-4">
  <h1>Mailbox</h1>
  <section class="mb-4">
    <h2 class="h5">Messages</h2>
    <% if (messages.length === 0) { %>
      <p>No messages.</p>
    <% } %>
    <% messages.forEach(m => { %>
      <div class="border rounded p-2 mb-2">
        <div><strong>From:</strong> <%= m.fromName %> &nbsp; <strong>To:</strong> <%= m.toName %></div>
        <% if (m.subject) { %><div><strong>Subject:</strong> <%= m.subject %></div><% } %>
        <div><small><%= m.sentAt %></small></div>
        <p class="mb-0"><%= m.body %></p>
      </div>
    <% }) %>
  </section>

  <section>
    <h2 class="h5">Send Message</h2>
    <form method="post">
      <div class="mb-3">
        <label for="to" class="form-label">To</label>
        <select id="to" name="to" class="form-select">
          <% users.forEach(u => { if (u.id !== user.id) { %>
            <option value="<%= u.id %>"><%= u.name %> (<%= u.role %>)</option>
          <% } }) %>
        </select>
      </div>
      <div class="mb-3">
        <label class="form-label">Subject</label>
        <input type="text" name="subject" class="form-control" />
      </div>
      <div class="mb-3">
        <label class="form-label">Message</label>
        <textarea name="body" class="form-control" rows="4"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Send</button>
    </form>
  </section>
</body>
</html>